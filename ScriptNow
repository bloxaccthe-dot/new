   Name = "JumpPower",
   Range = {50, 300},
   Increment = 10,
   Suffix = "Jump",
   CurrentValue = 50,
   Flag = "JumpSlider",
   Callback = function(Value)
      humanoid.JumpPower = Value
   end,
})

-- 🔄 زر إعادة الضبط
local ResetButton = Tab:CreateButton({
   Name = "🔄 Reset to Default",
   Callback = function()
      humanoid.WalkSpeed = 16
      humanoid.JumpPower = 50
      SpeedSlider:Set(16)
      JumpSlider:Set(50)

      -- إشعار بعد الريست
      Tab:CreateNotification({
         Name = "تمت الإعادة",
         Content = "تمت إعادة السرعة والقفز للوضع الطبيعي ✅",
         Image = "rbxassetid://7733658504", -- أيقونة بسيطة
         Time = 5 -- يختفي بعد 5 ثواني
      })
   end,
})
-- === تايمر السكربت + وقت السيرفر الحقيقي بصيغة مقروءة ===
local startTime = os.time() -- وقت تشغيل السكربت محلياً

-- دالة تنسيق زمن السكربت (كما عندك)
local function formatTimeAgo(seconds)
   if seconds < 60 then
      return "قبل لحظات"
   elseif seconds < 3600 then
      local m = math.floor(seconds / 60)
      return string.format("قبل %d %s", m, (m == 1 and "دقيقة" or "دقائق"))
   elseif seconds < 86400 then
      local h = math.floor(seconds / 3600)
      return string.format("قبل %d %s", h, (h == 1 and "ساعة" or "ساعات"))
   else
      local d = math.floor(seconds / 86400)
      return string.format("قبل %d %s", d, (d == 1 and "يوم" or "أيام"))
   end
end

-- دالة لتنسيق الوقت الحقيقي للسيرفر (المأخوذ من DistributedGameTime)
local function formatServerRunning(seconds)
   if seconds < 60 then
      return "السيرفر بدأ منذ لحظات"
   end

   local days = math.floor(seconds / 86400)
   local hours = math.floor((seconds % 86400) / 3600)
   local minutes = math.floor((seconds % 3600) / 60)

   if days > 0 then
      if hours > 0 then
         return string.format("السيرفر يعمل منذ %d %s و %d %s", days, (days==1 and "يوم" or "أيام"), hours, (hours==1 and "ساعة" or "ساعات"))
      else
         return string.format("السيرفر يعمل منذ %d %s", days, (days==1 and "يوم" or "أيام"))
      end
   elseif hours > 0 then
      if minutes > 0 then
         return string.format("السيرفر يعمل منذ %d %s و %d %s", hours, (hours==1 and "ساعة" or "ساعات"), minutes, (minutes==1 and "دقيقة" or "دقائق"))
      else
         return string.format("السيرفر يعمل منذ %d %s", hours, (hours==1 and "ساعة" or "ساعات"))
      end
   else
      return string.format("السيرفر يعمل منذ %d %s", minutes, (minutes==1 and "دقيقة" or "دقائق"))
   end
end

-- إنشاء تبويب/ليبل أو استخدم الموجود
local InfoTab = Window:CreateTab("⏱️ Info", 7733658504)
local InfoSection = InfoTab:CreateSection("معلومات الوقت")

local ScriptLabel = InfoTab:CreateLabel("⌛ جارٍ الحساب...")
local ServerLabel = InfoTab:CreateLabel("🕓 جارٍ الحساب...")

-- تحديث كل 5 ثواني باستخدام DistributedGameTime (وقت السيرفر الحقيقي)
task.spawn(function()
   while task.wait(5) do
      -- زمن تشغيل السكربت (محلي)
      local now = os.time()
      local elapsedScript = now - startTime
      ScriptLabel:Set("⌛ تم تشغيل السكربت " .. formatTimeAgo(elapsedScript))

      -- زمن السيرفر الحقيقي (من Roblox)
      local serverSeconds = tonumber(workspace.DistributedGameTime) or 0
      ServerLabel:Set(formatServerRunning(serverSeconds))
   end
end)
-- 🧾 عداد اللاعبين
local PlayerCountLabel = Instance.new("TextLabel")
PlayerCountLabel.Size = UDim2.new(0,150,0,25)
PlayerCountLabel.Position = UDim2.new(1,-160,0,40) -- فوق المحتوى أو حسب رغبتك
PlayerCountLabel.BackgroundTransparency = 1
PlayerCountLabel.TextColor3 = Color3.fromRGB(255,255,255)
PlayerCountLabel.Font = Enum.Font.GothamBold
PlayerCountLabel.TextSize = 16
PlayerCountLabel.TextXAlignment = Enum.TextXAlignment.Left
PlayerCountLabel.Text = "عدد اللاعبين: "..#Players:GetPlayers()
PlayerCountLabel.Parent = Frame

-- دالة لتحديث العدد
local function updatePlayerCount()
    PlayerCountLabel.Text = "عدد اللاعبين: "..#Players:GetPlayers()
end

-- تحديث عند دخول لاعب
Players.PlayerAdded:Connect(updatePlayerCount)

-- تحديث عند خروج لاعب
Players.PlayerRemoving:Connect(updatePlayerCount)
