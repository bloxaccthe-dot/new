local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "Lac Hub – 01 ",
   Icon = 0, -- Icon in Topbar. Can use Lucide Icons (string) or Roblox Image (number). 0 to use no icon (default).
   LoadingTitle = "Activated",
   LoadingSubtitle = "by kaljjaj",
   ShowText = "Rayfield", -- for mobile users to unhide rayfield, change if you'd like
   Theme = "Default", -- Check https://docs.sirius.menu/rayfield/configuration/themes

   ToggleUIKeybind = "K", -- The keybind to toggle the UI visibility (string like "K" or Enum.KeyCode)

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false, -- Prevents Rayfield from warning when the script has a version mismatch with the interface

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder for your hub/game
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false, -- Prompt the user to join your Discord server if their executor supports it
      Invite = "noinvitelink", -- The Discord invite code, do not include discord.gg/. E.g. discord.gg/ ABCD would be ABCD
      RememberJoins = true -- Set this to false to make them join the discord every time they load it up
   },

   KeySystem = false, -- Set this to true to use our key system
   KeySettings = {
      Title = "Untitled",
      Subtitle = "Key System",
      Note = "No method of obtaining the key is provided", -- Use this to tell the user how to get a key
      FileName = "Key", -- It is recommended to use something unique as other scripts using Rayfield may overwrite your key file
      SaveKey = true, -- The user's key will be saved, but if you change the key, they will be unable to use your script
      GrabKeyFromSite = false, -- If this is true, set Key below to the RAW site you would like Rayfield to get the key from
      Key = {"Hello"} -- List of keys that will be accepted by the system, can be RAW file links (pastebin, github etc) or simple strings ("hello","key22")
   }
})
local Tab = Window:CreateTab("Main", 4483362458) -- Title, Image
local Section = Tab:CreateSection("Section Example")
local Button = Tab:CreateButton({
   Name = "Bang",
   Callback = function()
   loadstring(game:HttpGet("https://raw.githubusercontent.com/bloxaccthe-dot/hello-/refs/heads/main/ownSctipt"))()
   end,
})
local Tab = Window:CreateTab("others", 4483362458) -- Title, Image
local Section = Tab:CreateSection("Others script (not mine) ")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- 🏃‍♂️ سلايدر السرعة
local SpeedSlider = Tab:CreateSlider({
   Name = "WalkSpeed",
   Range = {16, 200},
   Increment = 5,
   Suffix = "Speed",
   CurrentValue = 16,
   Flag = "SpeedSlider",
   Callback = function(Value)
      humanoid.WalkSpeed = Value
   end,
})

-- 🦘 سلايدر القفز
local JumpSlider = Tab:CreateSlider({
   Name = "JumpPower",
   Range = {50, 300},
   Increment = 10,
   Suffix = "Jump",
   CurrentValue = 50,
   Flag = "JumpSlider",
   Callback = function(Value)
      humanoid.JumpPower = Value
   end,
})

-- 🔄 زر إعادة الضبط
local ResetButton = Tab:CreateButton({
   Name = "🔄 Reset to Default",
   Callback = function()
      humanoid.WalkSpeed = 16
      humanoid.JumpPower = 50
      SpeedSlider:Set(16)
      JumpSlider:Set(50)

      -- إشعار بعد الريست
      Tab:CreateNotification({
         Name = "تمت الإعادة",
         Content = "تمت إعادة السرعة والقفز للوضع الطبيعي ✅",
         Image = "rbxassetid://7733658504", -- أيقونة بسيطة
         Time = 5 -- يختفي بعد 5 ثواني
      })
   end,
})
task.wait(1) -- تأخير بسيط لضمان تحميل الواجهة

-- 📄 تبويب المعلومات (Info)
local InfoTab = Window:CreateTab("Info", 4483362458)
local Section = InfoTab:CreateSection("Server Info")

local Players = game:GetService("Players")
local playerCountLabel = InfoTab:CreateLabel("👥 عدد اللاعبين: " .. #Players:GetPlayers())

Players.PlayerAdded:Connect(function()
	playerCountLabel:Set("👥 عدد اللاعبين: " .. #Players:GetPlayers())
end)
Players.PlayerRemoving:Connect(function()
	playerCountLabel:Set("👥 عدد اللاعبين: " .. #Players:GetPlayers())
end)

-- 🕒 مدة تشغيل السكربت
local startTime = tick()
local scriptTimeLabel = InfoTab:CreateLabel("🕒 تم تفعيل السكربت منذ: 0 ثانية")

task.spawn(function()
	while task.wait(1) do
		local elapsed = tick() - startTime
		local minutes = math.floor(elapsed / 60)
		local seconds = math.floor(elapsed % 60)
		local timeText
		if minutes > 0 then
			timeText = string.format("%d دقيقة و %d ثانية", minutes, seconds)
		else
			timeText = string.format("%d ثانية", seconds)
		end
		scriptTimeLabel:Set("🕒 تم تفعيل السكربت منذ: " .. timeText)
	end
end)

-- 🌐 معلومات السيرفر
local PlaceId = game.PlaceId
local JobId = game.JobId
InfoTab:CreateLabel("🌐 Place ID: " .. PlaceId)
InfoTab:CreateLabel("🆔 Server ID: " .. JobId)

-- 🧠 نوع الجهاز
local UserInputService = game:GetService("UserInputService")
local deviceType = UserInputService.TouchEnabled and "📱 جوال" or "💻 كمبيوتر"
InfoTab:CreateLabel("🧠 نوع الجهاز: " .. deviceType)

-- 🔄 زر إعادة تحميل السكربت
InfoTab:CreateButton({
	Name = "ريسيت السكربت 🤖",
	Callback = function()
		Rayfield:Notify({
			Title = "جارٍ إعادة التحميل...",
			Content = "انتظر لحظة ⏳",
			Duration = 2
		})
		task.wait(2)
		loadstring(game:HttpGet("https://raw.githubusercontent.com/bloxaccthe-dot/new/refs/heads/main/ScriptNow"))()
	end
})
InfoTab:CreateButton({
	Name = "اضغط لنسخ اسم المطور 🪽",
	Callback = function()
		local nameToCopy = "kaljjaj"
		pcall(function()
			setclipboard(nameToCopy)
		end)
		Rayfield:Notify({
			Title = "✅ تم النسخ",
			Content = "تم نسخ الاسم: " .. nameToCopy,
			Duration = 2
		})
	end
})
-- 👥 إشعار عند دخول صديق مع صوت تنبيه
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- 🕒 انتظر شوي ليتحمل Rayfield
task.wait(2)

-- نراقب أي لاعب جديد يدخل السيرفر
Players.PlayerAdded:Connect(function(player)
	task.wait(1) -- ننتظر ثانية لتفادي التأخير أو تحميل الاسم

	-- نتحقق إذا هو صديقك فعلاً
	local success, isFriend = pcall(function()
		return LocalPlayer:IsFriendsWith(player.UserId)
	end)

	if success and isFriend then
		-- 🔔 إشعار Rayfield
		Rayfield:Notify({
			Title = "👥 صديقك دخل اللعبة!",
			Content = "🎉 صديقك " .. player.Name .. " انضم إلى السيرفر!",
			Duration = 5
		})

		-- 🎵 صوت تنبيه بسيط
		local sound = Instance.new("Sound")
		sound.SoundId = "rbxassetid://9118823105" -- صوت ناعم قصير (تقدر تغيّره)
		sound.Volume = 2
		sound.Parent = workspace
		sound:Play()

		-- نحذف الصوت بعد تشغيله
		game.Debris:AddItem(sound, 5)
	end
end)
